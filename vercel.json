{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/pokemons(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/types(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/static/(.*)",
            "dest": "/client/static/$1"
        },
        {
            "src": "/manifest.json",
            "dest": "/client/manifest.json"
        },
        {
            "src": "/favicon.ico",
            "dest": "/client/favicon.ico"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/client/index.html"
        }
    ]
}